listen=<%= @runstatedir %>/gridinit.sock
pidfile=<%= @runstatedir %>/gridinit.pid
uid=<%= scope['gridinit::user'] %>
gid=<%= scope['gridinit::group'] %>
working_dir=<%= @runstatedir %>

